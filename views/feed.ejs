<%- include('partials/header') %>

<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #E8ECEF">
  <span class="navbar-brand mb-0 h1">
    <i class="fa fa-thin fa-newspaper" aria-hidden="true"></i> 
      News
  </span>
  <div class="navbar justify-content-end">
    <a class="btn btn-light btn-lg" href="/preferences" role="button">Preferences</a>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Logout</a>
  </div>
</nav>

<div class="jumbotron centered">
  <div class="container">
    <i class="fas fa-newspaper fa-6x"></i>
    <h1 class="display-3">News</h1>
   


    <div class="row row-cols-1 row-cols-md-3 g-4 ">
     

    <% newsArticles.forEach(function(article) { %>
      <div class="card-deck mt-4 mr-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.description %></p>
          <a href=<%=article.link%> class="btn btn-primary">Full Story</a>
        </div>
      </div>
    </div>
    <% }); %>

  </div>
  </div>
</div>

<%- include('partials/footer') %>