<html>
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
</head>
<body>

<script type="text/javascript">
$(document).ready(function () {
   $('#checkBtn').click(function() {
     checked = $("input[type=checkbox]:checked").length;

     if(!checked) {
       alert("You must check at least one checkbox.");
       return false;
     }

     if(checked > 5) {
       alert("You must select five or fewer categories.");
       return false;
     }

   });
});

</script>

<div class="jumbotron centered">
  <div class="container">
    <i class="fas fa-newspaper fa-6x"></i>
    <h1 class="display-3">Select Which Categories of News to Receive</h1>
    <p class="lead">(maximum of five selections)</p>
    <hr>
  </div>
</div>

<div class="jumbotron left">
  <div class="container">
<form action="/preferences" method="post">
  <div class="form-check">
     <div>
       <input class="form-check-input" type="checkbox" id="business" name="category" value="business"/>
       <label class="form-check-label" for="business">Business</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="entertainment" name="category" value="entertainment"/>
       <label class="form-check-label" for="entertainment">Entertainment</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="environment" name="category" value="environment"/>
       <label class="form-check-label" for="environment">Environment</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="food" name="category" value="food"/>
       <label class="form-check-label" for="food">Food</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="health" name="category" value="health"/>
       <label class="form-check-label" for="health">Health</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="politics" name="category" value="politics"/>
       <label class="form-check-label" for="politics">Politics</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="science" name="category" value="science"/>
       <label class="form-check-label" for="science">Science</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="sports" name="category" value="sports"/>
       <label class="form-check-label" for="sports">Sports</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="technology" name="category" value="technology"/>
       <label class="form-check-label" for="technology">Technology</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="top" name="category" value="top"/>
       <label class="form-check-label" for="top">Top Stories</label>
     </div>
     <div>
       <input class="form-check-input" type="checkbox" id="world" name="category" value="world"/>
       <label class="form-check-label" for="world">World</label>
     </div>
     <div>
       <button class="btn btn-dark btn-lg" type="submit" id="checkBtn">Submit form</button>  
     </div>
    </div>
 </form>
</div>
</div>
